@using Green_eyes_server.Model
@model UserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div >
    <h2>Login</h2>
    <form asp-action="FazLogin" method="post" enctype="multipart/form-data">

        <label for="login" class="control-label">Login</label>
        <input type="text" Name="login" value="@Model.Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
        <br />

        <label for="sennha" class="control-label">Senha</label>
        <input type="password" Name="senha" value="@Model.Senha" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
        <br />

        <input type="submit" value="Logar" class="btn btn-info" />
        
        <br />
    </form>
    </div>
</body>

