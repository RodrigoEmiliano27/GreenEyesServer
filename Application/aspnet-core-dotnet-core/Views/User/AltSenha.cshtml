@using aspnet_core_dotnet_core.Models
@model UserPasswordChangeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-image:url('images/imagemfundo.png')">
    <h2>Alterar senha</h2>
    <form asp-action="SalvarSenhaAlterada" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />


        <label for="Senha" class="control-label">Senha</label>
        <input type="password" Name="Senha" value="@Model.Senha" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
        <br />

         <label for="Senha_repetida" class="control-label">Repetir senha</label>
        <input type="password" Name="Senha_repetida" value="@Model.Senha_repetida" class="form-control" />
        <span asp-validation-for="Senha_repetida" class="text-danger"></span>
        <br />

        <input type="submit" value="Salvar dados" class="btn-info" />
        &nbsp;&nbsp;&nbsp;
        <a href="/Jogador/index" class="btn-light">Voltar</a>
        <br />
    </form>
</div>